<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/indigo100"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.CardView"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/side_nav_bar"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/course_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ECT101 | Semester 1 | CSE"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/indigo100" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:background="@color/indigo400"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foundation of Electrical Engineering"
            android:textSize="16sp"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_marginTop="3dp"
            android:textColor="@color/cyan100" />

        <TextView
            android:id="@+id/num_students"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="54 students enrolled"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_below="@id/course_name"
            android:textColor="@color/grey100"
            android:layout_marginTop="2dp"/>

        </LinearLayout>

    </android.support.design.card.MaterialCardView>
</RelativeLayout>