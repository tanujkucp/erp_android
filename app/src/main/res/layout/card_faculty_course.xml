    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        style="@style/Widget.MaterialComponents.CardView"
        android:elevation="10dp"
        app:cardCornerRadius="0dp"
        app:strokeColor="@color/dark_bluish_grey"
        app:strokeWidth="1dp"
        android:backgroundTint="@color/light_black"
        android:background="@color/dark_bluish_grey">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="8dp">

        <TextView
            android:id="@+id/course_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ECT101 | Semester 1 | CSE"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/light_bluish_grey" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_bluish_grey"
            android:layout_marginTop="2.5dp"/>

        <TextView
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foundation of Electrical Engineering"
            android:textSize="16sp"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_marginTop="2.5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/num_students"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="54 students enrolled"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_below="@id/course_name"
            android:textColor="@color/white" />

        </LinearLayout>

    </android.support.design.card.MaterialCardView>
</RelativeLayout>